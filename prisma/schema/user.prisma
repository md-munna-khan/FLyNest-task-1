enum Role {
  ADMIN
  TEACHER
  STUDENT
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  passwordHash String
  name         String
  role         Role     @default(STUDENT)
  createdAt    DateTime @default(now())
}

model Class {
  id       String    @id @default(uuid())
  name     String
  section  String
  students Student[]

  @@index([name])
}

model Student {
  id      String @id @default(uuid())
  name    String
  age     Int
  classId String?
  class   Class? @relation(fields: [classId], references: [id])

  @@index([name])
}